<% content_for :page_level_scripts do %> 
<script>
   jQuery(document).ready(function() {       
      // initiate layout and plugins
      App.init();
      FormComponents.init();
      var img = document.getElementById('page_img');
		var input_hidden = document.getElementById('input_cover');
		var remove = document.getElementById('remove_btn');
		
		if(input_hidden.value.length <= 0){
			remove.style.visibility = 'hidden';
		}
		
		$('#remove_btn').click(function(){
			img.style.visibility = 'hidden';
			input_hidden.value = "";
		});
   });
</script>


